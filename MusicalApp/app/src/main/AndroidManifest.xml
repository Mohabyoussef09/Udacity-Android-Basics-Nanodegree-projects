<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PlayerScreen" android:label="Play Song"/>
        <activity android:name=".PlayListScreen" android:label="PlayLists"/>
        <activity android:name=".AlbumsScreen" android:label="Albums"/>
        <activity android:name=".PaymentScreen" android:label="Payment"/>
        <activity android:name=".MediaPlayerScreen" android:label="External Api Screen"/>
    </application>

</manifest>